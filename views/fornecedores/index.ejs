<h1>Lista de fornecedores</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Fornecedor</th>
        </tr>
    </thead>
    <tbody>
        <% fornecedores.forEach(fornecedor => { %>
            <tr>
                <td><%= fornecedor.id %></td>
                <td><%= fornecedor.nome %></td>
                <td>
                    <a href="/fornecedores/<%= fornecedor.id %>" class="btn btn-primary">View</a>
                    <a href="/fornecedores/<%= fornecedor.id %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/fornecedores/<%= fornecedor.id %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
